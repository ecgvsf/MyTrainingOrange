<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTrainingOrange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">#FF5722</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFEB3B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:buttonTint">#FF9800</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/alata</item>
        <item name="fontFamily">@font/alata</item>
        <!-- SnackBar -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <!-- Slide Ruler -->
        <item name="notch_color">@color/black</item>
        <item name="indicator_color">@color/black</item>
        <item name="ruler_text_color">@color/black</item>

        <item name="progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
    </style>

    <style name="TextNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorOnSurface">#FF9800</item>
    </style>

    <style name="Widget.App.ProgressBar.Horizontal" parent="ThemeOverlay.AppCompat">
        <item name="android:statusBarColor" tools:targetApi="l">#FF00F7FF</item>
        <item name="color">#FF00F7FF</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="BaseAppTheme" parent="android:Theme.Material">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/slide_in</item>
        <item name="android:windowExitTransition">@transition/slide_out</item>

    </style>
    <style name="Theme.MyTrainingOrange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyTrainingOrange.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyTrainingOrange.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>